<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerNameInputLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="50dp"
    android:paddingEnd="100dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:layout_weight="3"

   >

    <ImageView
        android:id="@+id/playerNameColour"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/conDesc"
        android:src="@drawable/red" />

    <EditText
        android:id="@+id/playername_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/playerName"
        android:layout_weight="2"
        android:autofillHints="@string/playerName"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/classicness"
        android:textAllCaps="true"/>
</LinearLayout>
